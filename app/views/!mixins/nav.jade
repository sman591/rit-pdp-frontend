mixin nav(page)
  .navbar.navbar-collapse.collapse.navbar-wrapper.navbar-inverse
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Profesional Development Program
      nav#navbar.navbar-collapse.collapse
        ul(class='nav navbar-nav pull-right')
          each currentPage in ['Home', 'Calendar', 'Committee', 'Resources', 'Blog', 'FAQ', 'Contact']

            -pageClass = currentPage

            if currentPage == 'Home'
              -lowercaseURL = 'index.html'
            else if currentPage == 'Calendar'
              -lowercaseURL = 'calendarIndex.html'
            else if currentPage == 'My Account'
              -lowercaseURL = 'userMyAccount.html'
              -pageClass = 'MyAccount'
            else
              -lowercaseURL = currentPage.toLowerCase() + '.html'

            if currentPage == page
              -pageClass += " active"

            li(class=pageClass)
              a(href=lowercaseURL) #{currentPage}

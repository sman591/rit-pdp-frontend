include ../!mixins/nav.jade
include ../!mixins/dropdown.jade

doctype html
html(lang="en")
  head
    title Professional Development Program
    //- Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    //- Prefetch
    //- link(rel="dns-prefetch", href="http://fonts.googleapis.com")
    //- link(rel="dns-prefetch", href="http://google-analytics.com")

    //- favicon
    link(rel="icon", href="imgs/favicon.png")

    //- Style
    link(rel="stylesheet", href="assets/style.css")

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  body(class='preload')
    header: div.container
      a(href='index.html', class='logo')
        img(src='imgs/PDPLogo.png', alt='PDP Logo')
      p(class='motto')
        span Pause for PD...
        | It's good for you!
      nav(class='breadcrumbs')
        a(href='http://rit.edu', target='_blank') RIT
        a(href='http://ntid.rit.edu', target='_blank') NTID
        a(href='http://ntid.rit.edu/das', target='_blank') DAS
        a(href='http://index.html') Professional Development Program
      block nav

    main: div.container
      block main

    footer: div.container
      div(class='left')
        a(href='http://rit.edu', target='_blank') Rochester Institute of Technology
        a(href='http://ntid.rit.edu', target='_blank') National Technical Institute for the Deaf
        a(href='http://ntid.rit.edu/das', target='_blank') Deartment of Access Services
        p &copy; 2013
      div(class='logos')
        a(href='http://www.rid.org/', target='_blank')
          img(src='imgs/RID.png', alt='RID logo')
        a(href='http://www.rid.org/education/index.cfm/AID/99', target='_blank')
          img(src='imgs/ACET.png', alt='ACET logo')
        div(class='interpretek')
          p Our Sponsor:
          a(href='http://www.interpretek.com', target='_blank')
            img(src='imgs/interpretek.png', alt='Interpretek logo')

    //- JS
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="assets/scripts.js")

    block script
